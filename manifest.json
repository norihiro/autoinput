{
	"manifest_version": 2,
	"name": "Automatic Input",
	"version": "0.1",

	"description": "fills input boxes automatically.",

	"applications": {
		"gecko": {
			"id": "autoinput@nagater.net"
		}
	},

	"permissions": ["storage", "<all_urls>"],

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["autoinput.js"]
		}
	],

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	}
}
